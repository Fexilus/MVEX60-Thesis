% Custom definitions

% amsthm definitions
% TODO: Decide on a style. Right now these are copied from amsthm's docs.
\theoremstyle{plain}
\newtheorem{thm}{Theorem}[section]
\newtheorem{lem}[thm]{Lemma}
\newtheorem{prop}[thm]{Proposition}
\newtheorem*{cor}{Corollary}

\theoremstyle{definition}
\newtheorem{defn}{Definition}[chapter]
\newtheorem{exmp}{Example}[section]
\newtheorem{xca}[exmp]{Exercise}

\theoremstyle{remark}
\newtheorem*{rem}{Remark}
\newtheorem*{note}{Note}
\newtheorem{case}{Case}

% Sets
\newcommand{\reals}{\mathbb{R}}
\newcommand{\cont}[2]
{
  \ensuremath{
    \mathcal{C}
    \if\relax\detokenize{#1}\relax\else^{#1}\fi
    \if\relax\detokenize{#2}\relax\else\left(#2\right)\fi
  }
}

% Math table-likes
\newcommand\FlLabel[1]{% Label that is affects the maximal spreading of flalign.
  \,\label{#1}% TODO: Sometimes overflows last label
}
\newcolumntype{M}{% Column fixes padding of equations and aligns in minipagees
  >{%
    \abovedisplayskip=4.15pt% Set skip before align
    \abovedisplayshortskip=4.15pt% Set skip before equation
    \belowdisplayskip=0pt% Remove skip after aligns and equations
    \noindent% Remove indent to ensure that align and equation behave similarly
  }%
  X%
  <{%
    \vspace{4.15pt}% Space instead of skip under, since there is no paragraph after
  }%
}

% Reference ODE
\crefname{ode}{the ODE}{the ODE:s}
\Crefname{ode}{The ODE}{The ODE:s}
\creflabelformat{ode}{#2(#1)#3}
% Subequation references
\crefname{subequation}{eqs.}{eqs.}
\Crefname{subequation}{Eqs.}{Eqs.}
\creflabelformat{subequation}{#2(#1)#3}
