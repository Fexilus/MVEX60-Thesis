% Math tables
\newcommand\AddEquationLabel[1]{%
  \ifcsedef{autonum@#1Referenced}{% Test if referenced (autonum compatibility)
    \refstepcounter{equation}% increment equation counter
    (\@currentlabel)% print equation number
  }{}%
  \label{#1}% give the equation a \label
}
\newcolumntype{M}{>{\hfill\(\displaystyle}X<{\)\hfill}} % mathematics column
\newcolumntype{L}{>{\hfill\(\displaystyle}X<{\)}@{\,}} % LH mathematics column
\newcolumntype{R}{>{\(\displaystyle}X<{\)\hfill}} % RH mathematics column
\newcolumntype{N}{>{\collectcell\AddEquationLabel}r<{\endcollectcell}}
